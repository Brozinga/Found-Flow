{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=found_flow_db;Username=master;Password=S3cret"
  },
  "IpRateLimitSettings": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIPHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1", "::1/10", "192.168.0.0/24" ],
    "EndpointWhitelist": [ "get:/api/v1/license", "*:/api/v1/status" ],
    "ClientWhitelist": [ "dev-id-1", "dev-id-2" ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/v1/*",
        "Period": "1m",
        "Limit": 5
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "JwtSettings": {
    "Key": "fa54e384-a3ee-4e85-ae30-b108842eaa13",
    "TokenExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "SwaggerSettings": {
    "Enable": true,
    "ContactName": "Fernando Brozinga",
    "ContactUrl": "https://github.com/brozinga",
    "ApiName": "Flow Found API",
    "ApiDescription": "Api dedicada para gerenciamento de despesas e receitas, para o sistema Found Flow."
  },
  "CorsSettings": {
    "Origin": []
  },
  "LoggingSettings": {
    "LogRequestEnabled": true,
    "LogResponseEnabled": true
  },
  "OpenTelemetrySettings": {
    "Endpoint": "http://localhost:4318/v1/traces",
    "Application": "foundflow-backend",
    "Authorization": "54d8aaa3-4717-445f-bd57-a98d83faabec"
  },
  "Serilog": {
    "Properties": {
      "Application": "FoundFlow WebApi"
    },
    "Using": [ "Serilog.Exceptions", "Serilog.Formatting.Compact" ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails",
      "WithElasticApmCorrelationInfo"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "AspNetCoreRateLimit": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj} {NewLine}{Exception} {Properties:j}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:/logs/rate-limiting.log",
          "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": null,
          "fileSizeLimitBytes": null
        }
      }
    ]
  }
}
